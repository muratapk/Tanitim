
@{
    ViewData["Title"] = "Listem";
}

<h1>Listem</h1>
@model List<Tanitim.Models.Personel>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Personel No</th>
            <th scope="col">Personel Ad</th>
            <th scope="col">Personel Maaş</th>
            <th scope="col">Düzelt</th>
            <th scope="col">Silme</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var satir in Model)
        {
        <tr>
            <th scope="row">1</th>
            <td>@satir.PersId</td>
            <td>@satir.Ad</td>
            <td>@satir.Maas</td>
            <td><a class="btn btn-success" asp-route-id="@satir.PersId" asp-controller="Zafer" asp-action="Edit">Düzelt</a></td>
            <td><a class="btn btn-danger" asp-route-id="@satir.PersId" asp-controller="Zafer" asp-action="Delete">Silme</a></td>
        </tr>
        }
      
    </tbody>
</table>